<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.contacts.NewContactActivity">

    <!--edit text for our course name-->
    <EditText
        android:id="@+id/idEdtfirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter First Name" />

    <!--edit text for our course description-->
    <EditText
        android:id="@+id/idEdtlastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Last Name" />

    <!--edit text for course description-->
    <EditText
        android:id="@+id/idEdtphoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Phone Number" />

    <!--button for saving data to room database-->
    <Button
        android:id="@+id/idBtnSaveContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="Save your contact"
        android:textAllCaps="false" />

</LinearLayout>